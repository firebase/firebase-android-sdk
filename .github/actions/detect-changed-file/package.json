{
  "name": "detect-changed-file",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts",
    "format-check": "prettier --check src/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/index.ts --source-map --license licenses.txt"
  },
  "dependencies": {
    "@actions/core": "1.9.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.0.3",
    "@actions/glob": "0.3.0"
  },
  "devDependencies": {
    "@types/node": "18.7.13",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
